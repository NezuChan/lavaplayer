root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
ij_java_names_count_to_use_import_on_demand = 5
ij_java_class_count_to_use_import_on_demand = 5
ij_java_continuation_indent_size = 4
ij_java_space_before_if_parentheses = true
ij_java_space_before_for_parentheses = true
ij_java_space_before_try_parentheses = true
ij_java_space_before_catch_parentheses = true
ij_java_space_before_while_parentheses = true
ij_java_space_before_switch_parentheses = true
ij_java_spaces_around_equality_operators = true
ij_java_space_before_colon = true
ij_java_space_after_colon = true
ij_java_keep_simple_classes_in_one_line = true
ij_java_keep_simple_methods_in_one_line = true
ij_java_keep_simple_blocks_in_one_line = true
ij_java_keep_simple_lambdas_in_one_line = true
ij_java_method_call_chain_wrap = on_every_item
ij_java_record_components_wrap = on_every_item
ij_java_method_parameters_wrap = on_every_item
ij_java_blank_lines_after_package = 1
ij_java_blank_lines_after_imports = 1
ij_java_blank_lines_after_class_header = 1
ij_java_blank_lines_before_class_end = 1
ij_java_blank_lines_around_method_in_interface = 0
ij_java_space_inside_one_line_enum_braces = true
ij_java_space_after_type_cast = true
ij_java_spaces_around_method_ref_dbl_colon = false
ij_any_if_brace_force = always
ij_any_for_brace_force = always
ij_any_while_brace_force = always
ij_any_do_while_brace_force = always
